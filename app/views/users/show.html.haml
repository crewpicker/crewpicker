- title t(:user).capitalize + ': ' + @user.username
%h1= t(:user).capitalize + ': ' + @user.username
%table.table.table-striped
  %tr
    %th
      = t(:username)
      \:
    %td= @user.username
  %tr
    %th
      = t(:name)
      \:
    %td= @user.name
  %tr
    %th
      = t(:email)
      \:
    %td= @user.email
  %tr
    %th
      = t(:roles).capitalize
      \:
    %td= @user.roles.map(&:name).to_sentence.capitalize
  %tr
    %th
      Sist endret:
    %td= @user.updated_at.year
%p
  = link_to t(:edit), edit_user_path(@user)
  |
  \#{link_to t(:back), users_path}
%h2
  Frivillig
%table.table.table-striped
  %tr
    %th= t(:event)
    %th= t(:year)
    %th
  - @user.volunteers.unscoped.each do |volunteer|
    %tr
      %td= volunteer.event.name
      %td= volunteer.event.from.year
      %td
        = link_to t(:show), volunteer
        |
        = link_to t(:edit), edit_volunteer_path(volunteer)
        |
        = link_to t(:delete), volunteer, method: :delete, data: { confirm: t(:confirm) }
