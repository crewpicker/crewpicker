<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t(:name) %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label t(:username) %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label t(:email) %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label t(:password) %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label t(:password_confirmation) %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <% permitted_to? :manage, :roles do %>
    <div class="field">
      <%= f.label t(:roles).capitalize %><br />
      <%= f.password_field :password_confirmation %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit 'Registrer brukerkonto' %>
  </div>
<% end %>
