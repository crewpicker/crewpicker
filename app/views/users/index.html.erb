<h1>Listing users</h1>

<table>
  <tr>
    <th><%= t(:username) %></th>
    <th><%= t(:name) %></th>
    <th><%= t(:email) %></th>
    <th>Tilgang</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.highest_role %></td>
    <td>
      <%= link_to 'Show', user %> |
      <%= link_to 'Edit', edit_user_path(user) %> |
      <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

