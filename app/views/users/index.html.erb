<% title t(:listing).capitalize + ' ' + t(:users) %>
<h1><%= t(:listing).capitalize + ' ' + t(:users) %></h1>

<table class="border">
  <tr>
    <th><%= t(:username) %></th>
    <th><%= t(:name) %></th>
    <th><%= t(:email) %></th>
    <th><%= t(:roles).capitalize %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.roles.map(&:title).to_sentence.capitalize %></td>
    <td><%= link_to t(:show), user %></td>
    <td><%= link_to t(:edit), edit_user_path(user) %></td>
    <td><%= link_to t(:delete), user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<p><%= link_to t(:new).capitalize + ' ' + t(:user), new_user_path %></p>
