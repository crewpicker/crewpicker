<% title t(:listing).capitalize + ' ' + t(:users) %>
<div class="container">
  <h1><%= t(:listing).capitalize + ' ' + t(:users) %></h1>
  <table class="table table-striped">
    <tr>
      <th><%= t(:username) %></th>
      <th><%= t(:name) %></th>
      <th><%= t(:email) %></th>
      <th><%= t(:roles).capitalize %></th>
      <th>Type</th>
      <th title="Crewsøknad?">CS?</th>
      <th title="Bandsøknad?">BS?</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.roles.map(&:name).to_sentence.capitalize %></td>
      <td><% if user.authentications.count > 0 %><%= user.authentications.map(&:provider).to_sentence.capitalize %><% else %>RMR-bruker<% end %></td>
      <td><% if crew_application = CrewApplication.find_by_user_id(user.id) %><%= link_to 'Ja', crew_application %><% else %>Nei<% end %></td>
      <td>Nei</td>
      <td><%= link_to t(:show), user %></td>
      <td><%= link_to t(:edit), edit_user_path(user) %></td>
      <td><%= link_to t(:delete), user, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
    <tr>
      <td colspan="10">Antall: <%= @users.count %></td>
    </tr>
  </table>
  <p><%= link_to t(:new).capitalize + ' ' + t(:user), new_user_path %></p>
</div>
