<% title 'FestivalAdmin' %>
<h1>FestivalAdmin</h1>
<% if current_user && current_user.crew_application && !(current_user.crew_application.volunteer_id) %>
<p><%= link_to 'Endre crewsøknad', edit_crew_application_path(current_user.crew_application) %><br/>
<%= link_to 'Slett crewsøknad', crew_application_path(current_user.crew_application), :method => :delete %><br/></p>
<% end %>
<% if current_user %>
<% current_user.bands.each do |band| %>
<p><%= band.name %>: <%= link_to 'Endre bandpåmelding', edit_band_path(band) %> | <%= link_to 'Slett bandpåmelding', band_path(band), :method => :delete %></p>
<% end %>
<% end %>
<p><%= link_to 'Legg inn bandpåmelding', :new_band %></p>
