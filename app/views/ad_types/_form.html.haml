= form_for(@ad_type) do |f|
  - if @ad_type.errors.any?
    #error_explanation
      %h2
        = pluralize(@ad_type.errors.count, "error")
        prohibited this ad_type from being saved:
      %ul
        - @ad_type.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :value
    %br/
    = f.text_field :value
  .field
    = f.label :invoice_name
    %br/
    = f.text_field :invoice_name
  .actions
    = f.submit
