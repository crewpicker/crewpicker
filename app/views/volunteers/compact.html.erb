<% title t(:volunteers_list) %>
<h1><%= t(:volunteers_list) %></h1>
<p id="notice"><%= notice %></p>
<p><%= link_to t(:new_volunteer), new_volunteer_path %></p>
<table class="border">
<% @groups.each do |group| %>
  <tr><th colspan="9"><h2><%= group.name %></h2></th></tr>
  <tr>
    <th><%= t(:name) %></th>
    <th><%= t(:address) %></th>
    <th><%= t(:birthday) %></th>
    <th><%= t(:age) %></th>
    <th><%= t(:phone) %></th>
    <th><%= t(:access_level) %></th>
  </tr>
<% group.volunteers.each do |volunteer| %>
  <tr>
    <td><%= volunteer.name %></td>
    <td><%= nl2br(volunteer.address) %></td>
    <td><%= volunteer.birthday %></td>
    <td><% if volunteer.birthday then concat(age_at(Date.civil(2012,3,30), volunteer.birthday)) end %></td>
    <td><%= volunteer.phone %></td>
    <td><%= volunteer.access_level %></td>
  </tr>
<% end %>
  <tr><th colspan="9"><%= t(:count) %>: <%= group.volunteers.count %></p></th></tr>
<% end %>
</table>
<p><%= link_to t(:new_volunteer), new_volunteer_path %></p>
