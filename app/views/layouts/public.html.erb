<!DOCTYPE html>
<html lang="no">
  <head>
    <title><%= yield(:title) %></title>
    <%= stylesheet_link_tag 'public' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tag %>
    <%= yield(:headerextra) %>
  </head>
  <body>
    <div id="navmenu">
    <% if current_user %>
      Logget inn som <%= current_user.username %> |
      <%= link_to "Logg ut", logout_path %>
    <% else %>
      <%= link_to image_tag('facebook_login_button.png', :alt => 'Logg inn med Facebook', :title => 'Logg inn med Facebook'), auth_at_provider_path(:provider => :facebook) %> |
      <%= link_to image_tag('sign-in-with-twitter-d.png', :alt => 'Logg inn med Twitter', :title => 'Logg inn med Twitter'), auth_at_provider_path(:provider => :twitter) %> |
      <%= form_tag user_sessions_path, :method => :post, :style => 'display: inline' do %>
        <%= hidden_field_tag :referer, @referer.to_s %>
        <%= text_field_tag :username, '', :size => 7, :placeholder => 'Brukernavn' %> /
        <%= password_field_tag :password, '', :size => 7, :placeholder => 'Passord' %> |
        <%= submit_tag '', :style => 'position: absolute; left: -9999px; width: 1px; height: 1px;' %>
        <%= link_to "Ny konto", new_user_path %>
      <% end %>
    <% end %>
    </div>
    <% if flash[:alert] %>
      <p class="flash-error"><%= flash[:alert] %></p>
    <% end %>
    <% if flash[:notice] %>
      <p class="flash-notice"><%= flash[:notice] %></p>
    <% end %>
<%= yield %>
<% if APP_CONFIG[:use_google_analytics] == true %>
<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', '<%= APP_CONFIG[:google_analytics_tracking_id] %>']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
<% end %>
  </body>
</html>
