<!DOCTYPE html>
<html lang="no">
  <head>
    <title><%= yield(:title) %></title>
    <%= stylesheet_link_tag 'public' %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:headerextra) %>
  </head>
  <body>
    <p style="text-align: right;">
    <% if current_user %>
      Logget inn som <%= current_user.username %> |
      <%= link_to "Logg ut", logout_path %>
    <% else %>
      <%= link_to "Logg inn", login_path %>
    <% end %>
    </p>
    <% if flash[:alert] %>
      <p class="flash-error"><%= flash[:alert] %></p>
    <% end %>
    <% if flash[:notice] %>
      <p class="flash-notice"><%= flash[:notice] %></p>
    <% end %>
<%= yield %>
  </body>
</html>
