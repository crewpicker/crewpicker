<h1>Listing ads</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Contact</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Type</th>
    <th>Address</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ads.each do |ad| %>
  <tr>
    <td><%= ad.name %></td>
    <td><%= ad.contact %></td>
    <td><%= ad.phone %></td>
    <td><%= ad.email %></td>
    <td><%= ad.ad_type.name %></td>
    <td><%= ad.address %></td>
    <td><%= ad.notes %></td>
    <td><%= link_to 'Show', ad %></td>
    <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
    <td><%= link_to 'Destroy', ad, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

