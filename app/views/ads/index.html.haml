- title "Annonser"
- ad_sum = Ad.all.each.inject(0) {|sum, ad| sum + ad.ad_type.value}
.container
  %h1 Annonser
  %p Status: #{number_with_delimiter(ad_sum, delimiter: ' ')}kr / 100 000kr
  %table.table.table-striped
    %tr
      %th Navn
      %th Kontaktperson
      %th Telefon
      %th Epost
      %th Annonsetype
      %th Adresse
      %th Notater
      %th
      %th
    - @ads.each do |ad|
      %tr{:style => "#{ad.ad_type.name == "Nei" ? 'color: #999999' : ''}"}
        %td= ad.name
        %td= ad.contact
        %td= ad.phone
        %td= ad.email
        %td= ad.ad_type.name
        %td= nl2br(ad.address)
        %td= nl2br(ad.notes)
        %td= link_to 'Endre', edit_ad_path(ad)
        %td= link_to 'Slett', ad, :confirm => 'Du vil sannsynligvis ikke gjÃ¸re dette.', :method => :delete
  %br
  = link_to 'Ny annonse', new_ad_path
