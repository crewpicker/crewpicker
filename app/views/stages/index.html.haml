- title @stages.model_name.human(:count => 2)
.container
  %h1= @stages.model_name.human(:count => 2)
  %table.table.table-striped
    %thead
      %tr
        %th= @stages.human_attribute_name(:name)
        %th= @stages.human_attribute_name(:from)
        %th= @stages.human_attribute_name(:to)
        %th
    %tbody
      - @stages.each do |stage|
        %tr
          %td= stage.name
          %td= stage.from
          %td= stage.to
          %td
            = link_to 'Program', stage_schedule_program_path(stage.name)
            |
            = link_to t(:edit), edit_stage_path(stage)
            |
            = link_to t(:delete), stage, :confirm => 'Er du sikker?', :method => :delete
  %p
    = link_to "#{t(:new).camelize} #{@stages.model_name.human.downcase}", new_stage_path
