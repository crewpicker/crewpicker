- title Group.model_name.human(count: 2)
.container
  %h1= Group.model_name.human(count: 2)
  %table.table.table-striped
    %tr
      %th= Group.human_attribute_name(:name)
      %th= Group.human_attribute_name(:description)
      %th= Group.human_attribute_name(:internal_group)
      %th
    - @groups.each do |group|
      %tr
        %td= group.name
        %th
          = nl2br(group.description) if group.description
        %td= group.internal ? t(:answer_yes) : t(:answer_no)
        %td
          = link_to t(:show), group
          | #{link_to t(:edit), edit_group_path(group)} | #{link_to t(:delete), group, method: :delete, data: { confirm: t(:confirm) }}
  %p= link_to "#{t(:create)} #{Group.model_name.human.downcase}", new_group_path, class: "btn btn-primary"
