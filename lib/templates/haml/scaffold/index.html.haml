- title @<%= plural_table_name %>.model_name.human(:count => 2)
.container
  %h1= @<%= plural_table_name %>.model_name.human(:count => 2)
  %table.table.table-striped
    %thead
      %tr
    <% for attribute in attributes -%>
        %th= @<%= plural_table_name %>.human_attribute_name(:<%= attribute.name %>)
    <% end -%>
        %th
    %tbody
      - @<%= plural_table_name %>.each do |<%= singular_table_name %>|
        %tr
    <% for attribute in attributes -%>
          %td= <%= singular_table_name %>.<%= attribute.name %>
    <% end -%>
          %td
            = link_to t(:show), <%= singular_table_name %>
            |
            = link_to t(:edit), edit_<%= singular_table_name %>_path(<%= singular_table_name %>)
            |
            = link_to t(:delete), <%= singular_table_name %>, method: :delete, data: { confirm: t(:confirm) }
  %p
    = link_to "#{t(:new).camelize} #{@<%= plural_table_name %>.model_name.human.downcase}", new_<%= singular_table_name %>_path
